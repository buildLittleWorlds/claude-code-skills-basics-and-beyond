{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "teammateMode": "auto",
  "hooks": {
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/hooks/verify-task-completion.sh",
            "timeout": 120,
            "statusMessage": "Running quality gate..."
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/hooks/verify-task-completion.sh",
            "timeout": 120,
            "statusMessage": "Checking teammate output..."
          }
        ]
      }
    ]
  }
}
